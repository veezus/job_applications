<div id="<%= dom_id event %>">
  <p class="my-2">
    <strong class="font-medium mb-1">Job:</strong>
    <%= event.job.name %>
  </p>

  <p class="my-2">
    <strong class="font-medium mb-1">Action:</strong>
    <%= event.action %>
  </p>

  <p class="my-2">
    <strong class="font-medium mb-1">Occurred on:</strong>
    <%= event.occurred_on %>
  </p>

  <%- if event.notes.present? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Notes:</strong>
      <%= event.notes %>
    </p>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this event", event, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this event", edit_event_path(event), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
